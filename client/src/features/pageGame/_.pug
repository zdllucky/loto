.container-fluid.mt-4
  .row
    .col.width-150px.height-120px
      .card.h-100.w-100.bg-warning
        .card-body
          .hstack.gap-2
            .rounded-circle.p-4.bg-light.fw-bold.fs-1.shadow-lg 45
            .vstack.gap-2
              .rounded-circle.bg-light.fw-bold.text-center.shadow 45
              .rounded-circle.bg-light.fw-bold.text-center.shadow 45
              .rounded-circle.bg-light.fw-bold.text-center.shadow 45
    .col.height-120px(x-data="gamePlayerProgress")
      .card.h-100.w-100.bg-dark
        .card-body.w-100.h-100
          h5.card-title.text-light Player progress
          .h-100.w-100
            .vstack.gap-3.w-100
              template(:key="index")&attributes({"x-for": "(playerCouple, index) in playersProgress"})
                .w-100.hstack.h-50.gap-3
                  template(:key="player.id")&attributes({"x-for": "(player, index) in playerCouple"})
                    .progress.shadow.w-100(role='progressbar' :aria-label='player.login' :aria-valuenow='Math.max(...player.progress)' aria-valuemin='0' aria-valuemax='90')
                      .progress-bar.overflow-visible.bg-warning.fw-bold.text-dark.ps-1.text-truncate(:style='`width: ${Math.max(...player.progress) / 90 * 100}%;`' x-text="player.login.substring(0, 6) + '...'")
  .row(x-data="gameCards")
    template(:key="card.id")&attributes({"x-for": "card in cards"})
      .col-12.mt-3
        .card.rounded-4
          .card-body
            table.table.table-bordered.mb-0.lotto-table
              tbody
                template(:key="rowIndex")&attributes({"x-for": "(row, rowIndex) in card.board"})
                  tr
                    template(:key="cellIndex")&attributes({"x-for": "(cell, cellIndex) in row"})
                      td(x-text="cell || ' '")
  .row.mt-3
    .col
      a(x-link href="/").btn.btn-md.btn-light.w-100 Back